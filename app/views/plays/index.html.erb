<% if user_signed_in? %>
<h1 class="current-category"><%= params[:category] %></h1>
<% if @plays.count == 0 %>
	<h3><%= @plays.count %> plays in this category</h3>
<% else %>
<h3 class="border">TotalPlays: <%= @plays.count %> </h3>

<div class="row">
	<% @plays.each do |play| %>
		<div class="col-md-3">
			<a href="/plays/<%= play.id %>">
				<%= image_tag play.play_img.url(:play_index) , class: "play" %>
			</a>
		</div>
	<% end %>
</div>
<% end %>	



<% end %> 