<h1><%= @play.title %></h1>
<h3><%= @play.description %></h3>
<b>category:<%= @play.category.name  if @play.category_id %></b><br>
<b>by: <%= @play.director %></b>
<br>
<br>

<div class="links btn-group">
<% if user_signed_in? %>
<% if @play.user_id == current_user.id %>
<%= link_to 'delete this play' ,play_path(@play), method: :delete  , data: {confirm: "Are You Sure?"}  %>
<br>
<%= link_to 'edit this play' , edit_play_path(@play) %>

<% end %>
<% end %>

</div>